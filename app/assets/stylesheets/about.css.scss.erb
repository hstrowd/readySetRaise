#about-us .section {
    width: 100%;
}
#about-us .section .body {
    width: 95%;
    max-width: 63em;
    margin: 0 auto;
    padding: 2%;

    text-align: center;

    color: #444444;
}
#about-us .section .title {
    margin: .4em 0;
    
    font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
    font-size: 1.7em;
    color: #000000;
}
#about-us .section .image {
    display: none;

    vertical-align: middle;

    margin: auto 0;
    padding: 20px;
}
#about-us .section .content {
    display: inline-block;

    width: 95%;
    vertical-align: middle;
}


@media screen and (min-width: 800px)  {
    #about-us .section .image {
        display: inline-block;

        width: 35%;
    }
    #about-us .section .content {
        width: 55%;
    }
}

@media screen and (min-width: 1024px)  {
    #about-us .section {
        background-image: url('<%= asset_path("bg-texture.png"); %>');
    }
}






#about-us .section.service {
    background-color: #A0CAFF;
}





#about-us .section.vision {
    background-color: #A3EB87;
}




#about-us .section.team .body {
    max-width: 50em;
}
#about-us .section.team .member {
    margin: 1.2em 0;
    
    text-align: center;
}
#about-us .section.team .member .pic {
    display: inline-block;

    width: 20%;

    margin: 1%;

    vertical-align: middle;
}
#about-us .section.team .member .pic img {
    box-shadow: .3em .3em .6em #444444;
}
#about-us .section.team .member .personal-details {
    display: inline-block;

    width: 75%;
    margin: 0 2%;

    vertical-align: top;

    text-align: left;
}
#about-us .section.team .member .name {
    display: inline-block;

    margin: 5px 15px;

    vertical-align: middle;

    color: #59A73B;
    font-size: 16px;
    font-weight: bold;
}

@media screen and (min-width: 600px)  {
    #about-us .section.team .member .pic {
        float: left;

        margin: 1% 3%;
    }
    #about-us .section.team .member .bio {
        padding-left: 26%;

        text-align: left;
    }
}
