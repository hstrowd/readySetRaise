/**
 * Site Wide Styles
 **/

html {
    height: 100%;
}
body {
    height: 100%;

    margin: 0;
    
    background-color: #DDDDDD;

    font-family: Candara, Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif;
}

#page-container {
    position: relative;
    
    min-height: 100%;

    background-image: url('<%= asset_path("bg-texture.png"); %>');
}



/**
 * Site Wide Styles
 **/

.clear {
    clear: both;
}
.centerer {
    margin-left: auto;
    margin-right: auto;
}

.vert-centerer {
    display: inline-block;

    height: 100%;

    vertical-align: middle;
}

.btn {
    padding: .3em .25em;
    margin: .2em .3em;

    background-color: #FFFFFF;
    border: .1em solid #888888;
    border-radius: .4em;

    color: #777777;
    text-align: center;
}
.btn:hover {
    background-color: #A3EB87;
    border: .1em solid #444444;

    color: #666666;
}

a {
    color: #3861E2;
    text-decoration: none;
}
a:hover {
    color: #7294FD;
    text-decoration: underline;
}

/* Ensures images size properly to fit within their parent containers. */
img {
    max-width: 100%;
    max-height: 100%;
}



/**
 * Application Setup Form Styles
 **/

/* TODO: Rename this to just form. */
.std-form .centerer {
    max-width: 940px;
    width: 80%;
}

.std-form .instructions {
    width: 85%px;
}
.std-form .instructions .title {
    margin: .75em 1em;
    font-size: 1.5em;
    font-weight: bold;
}
.std-form .instructions .description {
    margin: .5em 2em;
}

.std-form form {
    margin: .75em 0;
}
.std-form .field {
    margin: 0.5em 2.5em;

    vertical-align: middle;
}
.std-form .field .label {
    display: inline-block;
    
    width: 30%;
    max-width: 150px;

    margin-right: .6em;

    color: #444444;
    font-size: 0.9em;
    
    vertical-align: middle;
    text-align: right;
}
.std-form .field .label .help-text {
    font-size: .5em;
}
.std-form .field .field_with_errors {
    display: inline-block;

    vertical-align: middle;
}
.std-form .field input {
    width: 30%;
    max-width: 300px;

    padding: 0.5em;

    vertical-align: middle;
}
.std-form .field .field_with_errors input {
    border-color: #EB8787;
    background-color: #FFBDBD;
}
.std-form .field .field_with_errors textarea {
    border-color: #EB8787;
    background-color: #FFBDBD;
}
.std-form .field textarea {
    width: 30%;
    max-width: 300px;
    height: 2.5em;
    max-height: 200px;

    padding: .5em;

    vertical-align: middle;

    font-size: .5em;
}
.std-form .field .info {
    display: inline-block;

    width: 30%;
    height: 2.5em;

    font-size: .5em;
    
    vertical-align: middle;
}
.std-form .field .info .icon {
    display: inline-block;
    float: left;

    width: 1.7em;
    height: 1.7em;
    
    margin: .3em .1em;

    background-image: url('<%= asset_path("info.png") %>'); 
    
    vertical-align: middle;
}
.std-form .field .info .description {
    display: none;

    max-width: 100%;

    padding: .1em;
    margin: .5em;

    vertical-align: top;
}
.std-form .field .info:hover .description {
    display: inline-block;
}
.std-form .field .error {
    display: inline-block;

    max-width: 30%;
    height: 2.5em;
    
    vertical-align: middle;
}
.std-form .field .error .icon {
    display: inline-block;

    width: 1.7em;
    height: 1.7em;
    
    margin: .3em .1em;

    background-image: url('<%= asset_path("error.gif") %>'); 
    
    vertical-align: middle;
}
.std-form .field .error .reason {
    display: none;

    max-width: 100%;

    padding: .1em;
    margin: .5em;

    border: 1px solid #EB8787;
    border-radius: .2em;
    background-color: #FFBDBD;

    vertical-align: top;
}
.std-form .field .error:hover .reason {
    display: inline-block;
}

.std-form input.submit {
    display: inherit;
    
    height: 3em;
    width: 25%;
    min-width: 10em;
    
    padding: .25em .2em;
    margin: 1.5em 18%;

    background-color: #FFFFFF;
    border: .12em solid #888888;
    border-radius: .5em;

    font-size: .75em;
    font-weight: bold;
    text-align: center;
}
.std-form input.submit:hover {
    padding: .3em .2em;

    background-color: #A3EB87;
    border: .18em solid #AAAAAA;
}







/**
 * Header Styles
 **/

#header {
    position: fixed;
    top: 0px;

    width: 100%;
    /* TODO: Update this to be less for restricted height displays. */
    height: 5em;

    /* Required to be above the Slick carousels. */
    z-index: 99;
    
    background-color: rgba(255,255,255,0.80);

    font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
    font-size: .9em;
}

#header .centerer {
    width: 100%;
    max-width: 940px;
    height: 100%;
}

#header .main-logo {
    float:left;

    width: 32%;
    max-width: 300px;
    height: 100%;
}
#header .main-logo img {
    display: inline-block;

    max-width: 95%;

    vertical-align: middle;
}
#header .controls {
    float: right;

    height: 100%;

    text-align: right;
}
#header .primary-nav {
    display: inline-block;

    height: 100%;

    margin: 0 1em;

    vertical-align: middle;
}
#header .primary-nav a {
    margin: .5em;
    
    color: #666666;
    text-decoration: none;
}
#header .primary-nav a:hover {
    color: #92D279;
    text-decoration: underline;
}

#header .account-management {
    display: inline-block;

    width: 5em;
    height: 80%;

    margin: .5em 0;
    vertical-align: middle;

    text-align: center;
}
#header .account-management .welcome {
    margin: .25em 0;

    font-size: .6em;
    text-align: center;
}
#header .account-management .welcome .account-name {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;

    font-size: 1.66em;
}
#header .account-management .login-btn {
    display: inline-block;

    width: 90%;
}
#header .account-management .btn {
    display: inline-block;
    
    width: 90%;
    padding: .3em 0;
    margin: .15em .05em;

    border-radius: .5em;

    text-align: center;
}
#header .account-management .btn:hover {
    display: inline-block;
    
    padding: .25em 0;
    margin: .15em 0;
}
#header .account-management a {
    color: #666666;
    text-decoration: none;
}
#header .account-management a:hover {
    color: #222222;
    text-decoration: underline;
}

#header .login {
    display: none;
    
    height: 2.2em;

    background-color: #A3EB87;

    font-size: .8em;
}
#header .login .align-helper {
    width: 95%;
    max-width: 920px;

    margin: 0 auto;

    text-align:right;
}

#header .login .field {
    display:inline-block;

    margin: .2em .25em;
}
#header .login .field .label {
    display:inline-block;

    margin: 0 .15em;
}
#header .login input {
    display: inline-block;

    padding: .15em;
}

#header .login .actions {
    display:inline-block;
}
#header .login .actions input.submit {
    display: inline-block;
    
    width: 5em;
    height: 2em;
    padding: .15em .1em;
    margin: .05em .1em;

    background-color: #FFFFFF;
    border: .1em solid #888888;
    border-radius: .5em;

    text-align: center;
}
#header .login .actions input.submit:hover {
    background-color: #A0CAFF;
    border: .1em solid #666666;
}





#user-nav {
    padding: .15em;

    background-color: #DDDDDD;
}
#user-nav .centerer {
    width: 95%;
    max-width: 940px;
}
#user-nav .btn {
    display: inline-block;
    
    width: 4em;
}
#user-nav .logout-btn {
    float: right;
}


/**
 * Notification Styles
 **/

#notifications {
    width: 100%;
}

#notifications .notice {
    width: 100%;

    background-color: #E7EB87;

    font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
    font-size: .9em;
    text-align: center;
}
#notifications .notice .centerer {
    width: 95%;
    max-width: 940px;

    padding: .7em 0;
    margin: 0 auto;
}

#notifications .alert {
    width: 100%;

    background-color: #EB8787;

    font-size: .9em;
    text-align: center;
}
#notifications .alert .centerer {
    width: 95%;
    max-width: 940px;

    padding: .7em 0;
    margin: 0 auto;
}



/**
 * Page Content Styles
 **/

#header-stub {
    height: 5em;
    font-size: .9em;
}
#page-content {
    width: 100%;

    margin: 0 auto;
    padding: .1em;  /* Prevents margins from collapsing. */
}
#footer-stub {
    height: 4em;
    font-size: .7em;
}







/**
 * Footer Styles
 **/

#footer {
    position: absolute;
    bottom: 0;
    
    width: 100%;
    height: 4em;
    
    background-color: rgba(100,100,100,0.90);

    color: #CCCCCC;
    font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
    font-size: .7em;
}

#footer .centerer {
    width: 95%;
    max-width: 800px;

    text-align: center;
}

#footer .copyright {
    height: 1em;
    
    margin: .5em 0;
}

#footer .links {
    height: 1em;
    
    margin: .5em .8em;
}
#footer .links a {
    margin: .2em;
    
    color: #FFFFFF;
    text-decoration: none;
}
#footer .links a:hover {
    text-decoration: underline;
}

@media screen and (min-width: 700px)  {
    #footer .centerer {
        width: 90%;
    }
    #footer .copyright {
        display: inline-block;
        float: left;

        margin: 1.5em 0;
    }
    #footer .links {
        display: inline-block;
        float: right;
    
        margin: 1.5em .8em;
    }
}