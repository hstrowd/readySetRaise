/**
 * Site Wide Styles
 **/

html {
    height: 100%;
}
body {
    height: 100%;

    margin: 0;
    
    background-color: #DDDDDD;

    font-family: Candara, Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif;
}

#page-container {
    position: relative;
    
    min-height: 100%;
}

@media screen and (min-width: 1024px)  {
    #page-container {
        background-image: url('<%= asset_path("bg-texture.png"); %>');
    }
}

/**
 * Site Wide Styles
 **/

.clear {
    clear: both;
}
.centerer {
    margin-left: auto;
    margin-right: auto;
}

.vert-centerer {
    display: inline-block;

    height: 100%;

    vertical-align: middle;
}

.btn {
    padding: .3em .25em;
    margin: .2em .3em;

    background-color: #FFFFFF;
    border: .1em solid #888888;
    border-radius: .4em;

    color: #777777;
    text-align: center;
}
.btn:hover {
    background-color: #A3EB87;
    border: .1em solid #444444;

    color: #666666;
}

a {
    color: #3861E2;
    text-decoration: none;
}
a:hover {
    color: #7294FD;
    text-decoration: underline;
}

/* Ensures images size properly to fit within their parent containers. */
img {
    max-width: 100%;
    max-height: 100%;
}



/**
 * Application Setup Form Styles
 **/

/* TODO: Rename this to just form. */
.std-form .centerer {
    max-width: 940px;
    width: 95%;
}

.std-form .instructions .title {
    margin: 4% 6%;
    font-size: 1.5em;
    font-weight: bold;
}
.std-form .instructions .description {
    margin: 4% 2%;
}

.std-form form {
    margin: .75em 0;
}
.std-form .field {
    margin: 2% 4%;

    vertical-align: middle;
}
.std-form .field .label {
    display: inline-block;
    
    width: 25%;
    max-width: 150px;

    margin-right: .6em;

    color: #444444;
    font-size: 0.9em;
    
    vertical-align: middle;
    text-align: right;
}
.std-form .field .label .help-text {
    font-size: .5em;
}
.std-form .field .label .field_with_errors {
    width: 100%;
}
.std-form .field .input {
    display: inline-block;

    width: 60%;
    max-width: 300px;

    /* To account for the padding in the input field. */
    margin-right: 1.5em;
}
.std-form .field .field_with_errors {
    display: inline-block;

    width: 100%;

    vertical-align: middle;
}
.std-form .field input {
    width: 100%;

    padding: .75em;

    vertical-align: middle;
}
.std-form .field .field_with_errors input {
    border-color: #EB8787;
    background-color: #FFBDBD;
}
.std-form .field .field_with_errors textarea {
    border-color: #EB8787;
    background-color: #FFBDBD;
}
.std-form .field textarea {
    width: 100%;
    height: 2.5em;
    max-height: 200px;

    padding: .75em;

    vertical-align: middle;

    font-size: .5em;
}
.std-form .field .info {
    display: inline-block;

    width: 65%;
    height: 2em;

    margin-left: 29%;    
    vertical-align: middle;

    font-size: .5em;
}
.std-form .field .info .icon {
    display: inline-block;
    float: left;

    margin: .3em .1em;

    vertical-align: middle;
}
.std-form .field .info .description {
    display: inline-block;

    max-width: 100%;

    padding: .1em;
    margin: .5em;

    vertical-align: top;
}
.std-form .field .error {
    display: inline-block;

    max-width: 65%;
    height: 2em;

    margin-left: 28%;    
    vertical-align: middle;
}
.std-form .field .error .icon {
    display: inline-block;

    margin: .3em .1em;
    
    vertical-align: middle;
}
.std-form .field .error .reason {
    display: inline-block;

    max-width: 100%;

    padding: .1em;
    margin: .2em;

    border: 1px solid #EB8787;
    border-radius: .2em;
    background-color: #FFBDBD;

    vertical-align: top;
}

.std-form input.submit {
    display: inherit;
    
    height: 3em;
    width: 35%;
    min-width: 10em;
    
    padding: .25em .2em;
    margin: 1.5em 40%;

    background-color: #FFFFFF;
    border: .12em solid #888888;
    border-radius: .5em;

    font-size: .75em;
    font-weight: bold;
    text-align: center;
}
.std-form input.submit:hover {
    padding: .3em .2em;

    background-color: #A3EB87;
    border: .18em solid #AAAAAA;
}

@media screen and (min-width: 600px)  {
    .std-form .instructions .title {
        margin: .5em 1.5em;
    }
    .std-form .instructions .description {
        margin: .5em;
    }
    .std-form .field {
        margin: 1% 2%;
    }
    .std-form .field .input {
        width: 40%;
    }
    .std-form .field .info, .std-form .field .error {
        display: inline-block;
    
        width: 20%;
    
        margin-left: 0;
    }
    .std-form .field .info .description, .std-form .field .error .reason {
        display: none;
    }
    .std-form .field .info:hover .description, .std-form .field .error:hover .reason {
        display: inline-block;
    }
    .std-form input.submit {
        width: 25%;
    
        margin: 1.5em 18%;
    }
}





/**
 * Header Styles
 **/

#header {
    position: fixed;
    top: 0px;

    width: 100%;
    /* TODO: Update this to be less for restricted height displays. */
    height: 5em;

    /* Required to be above the Slick carousels. */
    z-index: 99;
    
    background-color: rgba(255,255,255,0.80);

    font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
    font-size: .9em;
}

#header .centerer {
    width: 100%;
    max-width: 940px;
    height: 100%;

    text-align: center;
}

#header .main-logo {
    display: inline-block;

    width: 50%;
    max-width: 300px;
    height: 100%;
}
#header .main-logo img {
    display: inline-block;

    max-width: 95%;

    vertical-align: middle;
}

#header .controls {
    display: none;
}



#header .menu {
    display: inline-block;

    width: 5em;
    height: 100%;
}
#header .menu .vert-centerer {
}
#header .menu-btn {
    display: inline-block;
    
    width: 5em;
    height: 100%;

    text-align: center;

    background-color: #DDDDDD;
}
#header .menu-btn:hover {
    cursor: pointer;

    background-color: #BBBBBB;
}
#header .menu.active .menu-btn {
    background-color: #CCCCCC;
}
#header .menu-btn img {
    display: inline-block;
    
    width: 3em;
    height: 3em;

    vertical-align: middle;
}
#header .menu .menu-dropdown {
    position: fixed;
    display: none;

    min-width: 12em;

    background-color: #CCCCCC;
}
#header .menu.active .menu-dropdown {
    display: initial;
}
/**
 * TODO: This seems like a hack, but I couldn't figure out any other way to 
 * get all of this to align properly for both mobile and desktop resolutions. 
 **/
#header .menu-dropdown .vert-centerer {
    display: none;
}
#header .menu-dropdown a {
    color: #666666;
    text-decoration: none;
}
#header .menu-dropdown a:hover {
        color: #888888;
}
#header .menu-dropdown .nav-item {
    min-height: 1.5em;
    padding: .5em;
}
#header .menu-dropdown .nav-item:hover {
    background-color: #BCFFA2;
}

#header .menu-dropdown .btn {
    padding: initial;
    margin: initial;

    background-color: none;
    border: none;
    border-radius: initial;

    color: initial;
}

#header .menu.profile-nav {
    float: left;
}
#header .menu.primary-nav {
    float: right;
}
#header .profile-nav .menu-dropdown {
    left: 0;
}
#header .primary-nav .menu-dropdown {
    right: 0;
}


#header .profile-nav .profile-intro {
    display:none;
}



@media screen and (max-width: 700px)  {
    /* This will simply not display right at these resolutions. */
    #header .login {
        display: none !important;
    }
}

@media screen and (min-width: 700px)  {
    #header .main-logo {
        float:left;
        width: 32%;
    }
    #header .centerer {
        width: 97%;
    }

    #header .menu {
        display: inline-block;

        width: initial;
    }
    #header .menu.profile-nav, #header .menu.primary-nav {
        float: right;
    }
    #header .menu .menu-btn {
        display: none;
    }
    #header .menu .menu-dropdown {
        position: initial;
        display: inline-block;
        float: none;

        height: 100%;
        width: initial;

        background-color: transparent;
    }
    #header .menu-dropdown .vert-centerer {
        display: inline-block;
    }
    #header .menu-dropdown .nav-items {
        display: inline-block;

        height: 80%;
    }
    #header .menu-dropdown a {
        display: inline-block;

        height: 100%;

        background-color: transparent;
    }
    #header .menu-dropdown .nav-item {
        height: 100%;
    }

    #header .menu.primary-nav .menu-dropdown .nav-item {
        height: 100%;

        margin: 0 .2em;
        padding: 0 .3em;
    }

    #header .controls {
        display: inline-block;

        width: 64%;

        text-align: right;
    }

    #header .menu.profile-nav {
        width: 6em;
    }
    #header .profile-nav .menu-dropdown {
        display: none;
    }
    #header .profile-nav .profile-intro {
        display: initial;
    }

    #header .profile-nav .nav-items {
        display: inline-block;
    
        width: 5em;
        height: 80%;
    
        vertical-align: middle;
        text-align: center;
    }
    #header .profile-nav .welcome {
        margin: .25em 0;
    
        font-size: .6em;
        text-align: center;
    }
    #header .profile-nav .welcome .account-name {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    
        font-size: 1.66em;
    }
    #header .profile-nav .login-btn {
        display: inline-block;
    
        width: 90%;
    }
    #header .profile-nav .btn {
        display: inline-block;
        
        width: 90%;
        padding: .3em 0;
        margin: .15em .05em;
    
        border-radius: .5em;
    
        text-align: center;
    }
    #header .profile-nav .btn:hover {
        display: inline-block;
        
        padding: .25em 0;
        margin: .15em 0;
    }
    #header .profile-nav a {
        color: #666666;
        text-decoration: none;
    }
    #header .profile-nav a:hover {
        color: #222222;
        text-decoration: underline;
    }
    
    #header .login {
        display: none;
        
        height: 2.2em;
    
        background-color: #A3EB87;
    
        font-size: .8em;
    }
    #header .login .align-helper {
        width: 95%;
        max-width: 920px;
    
        margin: 0 auto;
    
        text-align:right;
    }
    
    #header .login .field {
        display:inline-block;
    
        margin: .2em .25em;
    }
    #header .login .field .label {
        display:inline-block;
    
        margin: 0 .15em;
    }
    #header .login input {
        display: inline-block;
    
        padding: .15em;
    }
    
    #header .login .actions {
        display:inline-block;
    }
    #header .login .actions input.submit {
        display: inline-block;
        
        width: 5em;
        height: 2em;
        padding: .15em .1em;
        margin: .05em .1em;
    
        background-color: #FFFFFF;
        border: .1em solid #888888;
        border-radius: .5em;
    
        text-align: center;
    }
    #header .login .actions input.submit:hover {
        background-color: #A0CAFF;
        border: .1em solid #666666;
    }
    
}




#user-nav {
    padding: .15em;

    background-color: #DDDDDD;
}
#user-nav .centerer {
    width: 95%;
    max-width: 940px;
}
#user-nav .btn {
    display: inline-block;
    
    width: 4em;
}
#user-nav .logout-btn {
    float: right;
}


/**
 * Notification Styles
 **/

#notifications {
    width: 100%;
}

#notifications .notice {
    width: 100%;

    background-color: #E7EB87;

    font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
    font-size: .9em;
    text-align: center;
}
#notifications .notice .centerer {
    width: 95%;
    max-width: 940px;

    padding: .7em 0;
    margin: 0 auto;
}

#notifications .alert {
    width: 100%;

    background-color: #EB8787;

    font-size: .9em;
    text-align: center;
}
#notifications .alert .centerer {
    width: 95%;
    max-width: 940px;

    padding: .7em 0;
    margin: 0 auto;
}



/**
 * Page Content Styles
 **/

#header-stub {
    height: 5em;
    font-size: .9em;
}
#page-content {
    width: 100%;

    margin: 0 auto;
    padding: .1em;  /* Prevents margins from collapsing. */
}
#footer-stub {
    height: 4em;
    font-size: .7em;
}







/**
 * Footer Styles
 **/

#footer {
    position: absolute;
    bottom: 0;
    
    width: 100%;
    height: 4em;
    
    background-color: rgba(100,100,100,0.90);

    color: #CCCCCC;
    font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
    font-size: .7em;
}

#footer .centerer {
    width: 95%;
    max-width: 800px;

    text-align: center;
}

#footer .copyright {
    height: 1em;
    
    margin: .5em 0;
}

#footer .links {
    height: 1em;
    
    margin: .5em .8em;
}
#footer .links a {
    margin: .2em;
    
    color: #FFFFFF;
    text-decoration: none;
}
#footer .links a:hover {
    text-decoration: underline;
}

@media screen and (min-width: 700px)  {
    #footer .centerer {
        width: 90%;
    }
    #footer .copyright {
        display: inline-block;
        float: left;

        margin: 1.5em 0;
    }
    #footer .links {
        display: inline-block;
        float: right;
    
        margin: 1.5em .8em;
    }
}