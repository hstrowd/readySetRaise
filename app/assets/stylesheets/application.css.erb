/**
 *  ==== Site Wide Styles ====
 **/

html {
    height: 100%;
}
body {
    height: 100%;
    min-width: 250px;

    margin: 0;
    
    background-color: #DDDDDD;

    font-family: Candara, Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif;
}

#page-container {
    position: relative;
    
    height: 100%;
}

.clear {
    clear: both;
}
.centerer {
    margin-left: auto;
    margin-right: auto;
}

.vert-centerer {
    display: inline-block;

    height: 100%;

    vertical-align: middle;
}

.btn {
    padding: .3em .25em;
    margin: .2em .3em;

    background-color: #FFFFFF;
    border: 1px solid #888888;
    border-radius: .4em;

    color: #777777;
    text-align: center;

    cursor: pointer;
}
.btn:hover {
    background-color: #A3EB87;
    border: 1px solid #333333;

    color: #666666;
}
.btn:active {
    background-color: #75C357;
    border: 1px solid #333333;

    color: #555555;
}

a {
    color: #3861E2;
    text-decoration: none;
}
a:hover {
    color: #7294FD;
    text-decoration: underline;
}

/* Ensures images size properly to fit within their parent containers. */
img {
    max-width: 100%;
    max-height: 100%;
}

@media screen and (min-width: 1024px)  {
    #page-container {
        background-image: url('<%= asset_path("bg-texture.png"); %>');
    }
}



/**
 *  ==== Page Structure Styles ====
 **/

#header-stub {
    height: 4em;
    font-size: .9em;
}
#page-content {
    width: 100%;
    min-height: 100%;

    margin: 0 auto;
    /* Prevents internal margins from creating space between the page content and the header. */
    padding: .01em;
}
/* Dashboards are designed for full screen use. */
#page-content.dashboard {
    height: 100%;
}

@media screen and (min-width: 700px)  {
    #header-stub {
        height: 5em;
    }
}

