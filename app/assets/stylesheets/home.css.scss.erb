#home .section {
    width: 100%;
}

#home .section .body {
    width: 95%;
    margin: 0 auto;
    padding: 2%;

    text-align: center;
}

@media screen and (min-width: 1024px)  {
    #home .section {
        background-image: url('<%= asset_path("bg-texture.png"); %>');
    }
}



/**
 *  First Banner
 **/

#home .section.pitch {
    background-color: #A3EB87;

    color: #FFFFFF;
    text-align: center
}
#home .section.pitch .body {
      font-size: .9em;
}

#home .section.pitch .text-carousel .slick-arrow {
    margin: .75em;
}
#home .section.pitch .text-carousel .slick-arrow:hover {
    cursor: pointer;
    opacity: 0.4;
}
#home .section.pitch .body .text-container {
    display: inline-block;

    width: 95%;

    margin: 2%;

    vertical-align: middle;
}
#home .section.pitch .body .text {
    display: table;

    width: 100%;
}
#home .section.pitch .body .text .vert-align {
    display: table-cell;

    height: 13em;

    vertical-align: middle;
}
#home .section.pitch .heading {
    margin: .9em;

    font-size: 2em;
}
#home .section.pitch .content {
    margin: 1.8em;
}
#home .section.pitch .img-carousel {
    display: none;
    
    width: 30%;
    height: 60%;

    margin: 1.8em;
    vertical-align: middle
}
#home .section.pitch .body .img-carousel .img-container {
    width: 100%;
    height: 100%;

    vertical-align: middle;
    text-align: center;
}
#home .section.pitch .body .img-carousel .img-container .vert-align {
    display: inline-block;

    height: 100%;

    vertical-align: middle;
}
#home .section.pitch .body .img-carousel .img-container img {
    display: inline-block;
    
    max-width: 100%;
    max-height: 100%;

    vertical-align: middle;

    margin: 0 auto;
}

#home .section.pitch .img-carousel .slick-dots li button:before {
    color: #FFFFFF;
    font-size: 20px;
}
#home .section.pitch .img-carousel .slick-dots li.slick-active button:before {
    opacity: 1;
}                                   

@media screen and (min-width: 600px)  {
    #home .section.pitch .body {
        font-size: .8em;
    }
    #home .section.pitch .body .text-container {
        width: 50%;
        max-width: 25em;
    }
    #home .section.pitch .img-carousel {
        display: inline-block;
    }
}
@media screen and (min-width: 800px)  {
    #home .section.pitch .body {
        font-size: .9em;
    }
}
@media screen and (min-width: 1024px)  {
    #home .section.pitch .body {
        font-size: 1em;
    }
}






#home .section.method .title {
    margin: .3em auto;

    color: #5F97DE;
    font-size: 1.8em;
    font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
}

#home .section.method .outline {
    display: inline-block;

    width: 95%;
    
    margin: 0 .35em;
    vertical-align: top;

    text-align: center;
}
#home .section.method .outline .step {
    display: inline-block;

    width: 24%;
    min-width: 6em;

    margin: .9em 0;

    cursor: pointer;
}
#home .section.method .outline .title {
    margin: .4em .7em;

    color: #59A73B;
    font-size: .8em;
    text-align: center;
}
#home .section.method .outline .title:hover {
    color: #666666;
}
#home .section.method .outline .title .horiz-line {
    display: none;
    
    width: 20%;
    height: .1em;

    margin: 0 1%;
    vertical-align: middle;
    border-bottom: .1em solid #AAAAAA;
}
#home .section.method .outline .title .text {
    display: inline-block;

    font-size: 1.2em;
    vertical-align: middle;

    width: 100%;
    height: 100%;
}
#home .section.method .outline .pic {
    display: none;

    width: 8em;
    height: 5em;

    margin: 0 auto;

    box-shadow: .3em .3em .6em #AAAAAA;
}
#home .section.method .outline .pic img {
    width: 100%;
    height: 100%;

    margin: 0 auto;
}

#home .section.method .steps {
    display: inline-block;

    width: 90%;
    height: 55.5em;

    vertical-align: top;
    overflow: hidden;
}

#home .section.method .steps .step {
    position: relative;

    height: 100%;

    opacity: 0.0;
}
#home .section.method .steps .step.plan {
    opacity: 1.0;
}
#home .section.method .steps .step.recruit {
    top: -101%;
}
#home .section.method .steps .step.host {
    top: -202%;
}
#home .section.method .steps .step.follow-up {
    top: -303%;
}

#home .section.method .steps .step .title {
    color: #59A73B;
    font-size: 1.2em;
}
#home .section.method .steps .step .description {
    font-size: .9em;
}
#home .section.method .steps .step .description .action {
    margin: .7em;

    text-align: left;
}
#home .section.method .steps .step .description .action .title {
    margin: .3em 1.1em;
    
    font-size: .9em;
    color: #5F97DE;
    font-weight: bold;
}

@media screen and (min-width: 450px)  {
    #home .section.method .steps {
        height: 39.5em;
    }
}
@media screen and (min-width: 650px)  {
    #home .section.method .outline .title .horiz-line {
        display: inline-block;
    }
    #home .section.method .outline .title {
        background-color: transparent;
        border: none;
    }
    #home .section.method .outline .title:hover {
    }
    #home .section.method .outline .title .text {
        width: 49%;
        max-width: 6em;

        font-size: .8em;
        vertical-align: bottom;
    }
    #home .section.method .outline .pic {
        display: block;
    }
    #home .section.method .steps {
        height: 34em;
    }
}
@media screen and (min-width: 900px)  {
    #home .section.method .outline {
        width: 12em;
    }
    #home .section.method .outline .step {
        width: 100%;
    }
    #home .section.method .outline .step {
        display: block;
    }

    #home .section.method .steps {
        width: 40em;
    }
}






#home .section.get-started {
    overflow: hidden;

    background-color: #A0CAFF;
}
#home .section.get-started .hook {
    width: 95%;
    max-width: 35em;

    margin: 1em auto;
    
    font-size: 1.4em;
    color: #444444;
}
#home .section.get-started a {
    text-decoration: none;
}
#home .section.get-started .centerer {
    width: 15em;
    margin: .9em auto;
}
#home .section.get-started .btn {
    width: 9em;
    height: 1.25em;

    margin: .2em auto;
    padding: .4em;

    background-color: #DDDDDD;
    border: .1em solid #777777;
    border-radius: .3em;

    color: #4982CB;
    font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
    font-size: 1.5em;
    font-weight: bold;
    letter-spacing: .05em;
}
#home .section.get-started .btn:hover {
    background-color: #A3EB87;

    border-color: #555555;
    
    color: #3272C3;
}
