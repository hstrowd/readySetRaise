<div class="login">
  <div class="align-helper">
    <%= form_tag session_path(:user) do |f| %>
      <div class="field">
        <div class="label">
          <%= label_tag :email %>
        </div>
        <%= email_field_tag :email, '', autofocus: true %>
      </div>

      <div class="field">
        <div class="label">
          <%= label_tag :password %><br />
        </div>
        <%= password_field_tag :password, '', autocomplete: "off" %>
      </div>

      <div class="field">
        <%= check_box_tag :remember_me %> 
        <div class="label">
          <%= label_tag :remember_me %>
        </div>
      </div>

      <div class="actions">
        <%= submit_tag "Submit", class: :submit %>
      </div>
    <% end %>
  </div>
</div>
