<div class="item team">
  <div class="team-info">
    <div class="header">
      <div class="title">
        <%= link_to team do %>
          <%= team.name %>
        <% end %>
      </div>
    </div>

    <% if is_org_member(team) %>
      <div class="attr pledge-target">
        <div class="label">Pledge Target:</div>
        <div class="value">$<%= team.pledge_target.round() %></div>
      </div>
    <% end %>

    <% if team.event.has_started? %>
      <div class="attr pledges">
        <div class="label">Pledges Received:</div>
        <div class="value">
          <div class="total">$<%= team.pledge_total.round() %></div>
          <div class="count">from <%= pluralize(team.pledges.count, 'pledge') %></div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <div class="new-pledge">
      <% if team.fundraiser.is_active? && !team.event.has_ended? %>
        <%= link_to new_team_pledge_url(team, protocol: secure_protocol) do %>
          <div class="action btn">Make a Pledge</div>
        <% end %>
      <% end %>
    </div>
  </div>

</div>
