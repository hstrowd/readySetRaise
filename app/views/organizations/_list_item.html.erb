<div class="item organization">
  <div class="header">
    <div class="icon">
      <%= link_to show_org_path(org.url_key) do %>
        <%= image_tag 'org/defaultIcon.png' %>
      <% end %>
    </div>
    <div class="title">
      <%= link_to show_org_path(org.url_key) do %>
        <%= org.name %>
      <% end %>
    </div>
    <div class="assoc-count">(<%= pluralize(org.members.count, 'member') %>)</div>
  </div>
  <div class="attr description">
    <div class="value"><div class="label">Description:</div> <%= org.description %></div>
  </div>
  <div class="attr fundraiser-snapshot">
    <% if !org.fundraisers.present.empty? %>
      <% fundraiser = org.fundraisers.present.first %>
      <div class="present">
        <div class="label">Current Fundraiser</div>
        <div class="value"><%= link_to fundraiser.title, fundraiser %></div>
      </div>
    <% elsif !org.fundraisers.future.empty? %>
      <% fundraiser = org.fundraisers.future.first %>
      <div class="past">
        <div class="label">Upcoming Fundraiser</div>
        <div class="value"><%= link_to fundraiser.title, fundraiser %></div>
      </div>
    <% elsif !org.fundraisers.past.empty? %>
      <% fundraiser = org.fundraisers.past.first %>
      <div class="future">
        <div class="label">Previous Fundraiser</div>
        <div class="value"><%= link_to fundraiser.title, undraiser %></div>
      </div>
    <% end %>
  </div>
</div>
