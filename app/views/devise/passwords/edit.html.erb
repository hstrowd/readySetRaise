<div id="reset-password" class="std-form">
  <div class="centerer">
    <div class="instructions">
      <div class="title">Reset your password</div>
      <div class="description">Enter a new password for your account below.</div>
    </div>

    <%= form_for(resource, as: resource_name, url: users_password_reset_path, html: { method: :put }) do |f| %>

      <%= f.hidden_field :reset_password_token %>

      <% content_for 'password_field' do %>
        <%= f.password_field :password %>
      <% end %>
      <%= render(partial: "shared/form_field", 
                 locals: { 
                   form: f, 
                   model: resource, 
                   attr: :password
                 }) %>
      <% content_for 'password_confirmation_field' do %>
        <%= f.password_field :password_confirmation %>
      <% end %>
      <%= render(partial: "shared/form_field", 
                 locals: { 
                   form: f, 
                   model: resource, 
                   attr: :password_confirmation
                 }) %>

      <div class="actions">
        <%= f.submit "Update", class: [:btn, :submit] %>
      </div>
    <% end %>

  </div>
</div>
