<div id="forgot-password" class="std-form">
  <div class="centerer">
    <div class="instructions">
      <div class="title">Forgot your password?</div>
      <div class="description">Enter your email address below and we'll email you instructions to reset your password.</div>
    </div>

    <%= form_for(resource, as: resource_name, url: users_password_reset_path, html: { method: :post }) do |f| %>

      <div class="field email">
        <div class="label">
          <%= f.label :email %>
        </div>
        <%= f.text_field :email, autofocus: true %>
        <% if !resource.errors[:email].empty? %>
          <div class="error">
            <div class="icon"></div>
            <div class="reason"><%= resource.errors[:email][0].humanize %></div>
          </div>
        <% end %>
      </div>

      <div><%= f.submit "Email Me", class: :submit %></div>
    <% end %>

  </div>
</div>
