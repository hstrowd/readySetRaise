<div class="fundraiser-form">
  <%= form_for(@fundraiser) do |f| %>

    <!-- TODO: Add a dropdown menu to select the organization if this user has multiple available. -->

    <div class="field title">
      <div class="label">
        <%= f.label :title %>
      </div>
      <%= f.text_field :title, autofocus: true %>
      <% if !@fundraiser.errors[:title].empty? %>
        <div class="error">
          <div class="icon"></div>
          <div class="reason"><%= @fundraiser.errors[:title][0].humanize %></div>
        </div>
      <% end %>
    </div>

    <div class="field description">
      <div class="label">
        <%= f.label :description %>
      </div>
      <%= f.text_field :description, autofocus: true %>
      <% if !@fundraiser.errors[:description].empty? %>
        <div class="error">
          <div class="icon"></div>
          <div class="reason"><%= @fundraiser.errors[:description][0].humanize %></div>
        </div>
      <% end %>
    </div>

    <div class="field pledge-start-time">
      <div class="label">
        <%= f.label :pledge_start_time %>
      </div>
      <%= f.text_field :pledge_start_time, autofocus: true %>
      <% if !@fundraiser.errors[:pledge_start_time].empty? %>
        <div class="error">
          <div class="icon"></div>
          <div class="reason"><%= @fundraiser.errors[:pledge_start_time][0].humanize %></div>
        </div>
      <% end %>
    </div>

    <div class="field pledge-end-time">
      <div class="label">
        <%= f.label :pledge_end_time %>
      </div>
      <%= f.text_field :pledge_end_time, autofocus: true %>
      <% if !@fundraiser.errors[:pledge_end_time].empty? %>
        <div class="error">
          <div class="icon"></div>
          <div class="reason"><%= @fundraiser.errors[:pledge_end_time][0].humanize %></div>
        </div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Schedule Fundraiser", class: :submit %>
    </div>

  <% end %>
</div>
